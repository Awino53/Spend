<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>SpendWise</title>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/jwt-decode/build/jwt-decode.min.js"></script>
  <style>
    .budget-progress {
      margin: 20px 0;
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 5px;
    }
    .budget-progress h3 {
      margin: 0 0 10px;
    }
    .progress-bar {
      background: #f0f0f0;
      border-radius: 5px;
      overflow: hidden;
      height: 20px;
    }
    .progress-bar .progress {
      height: 100%;
      transition: width 0.3s ease;
    }
  </style>
</head>
<body>
   
    <h1>SpendWise</h1>
    <nav>
      <a href="/savings">View Savings</a>
      <a href="/debts">View Debts</a>
    </nav>
  
    <h1>Income Management</h1>
    <!-- Income Form -->
    <form id="income-form">
      <label for="income-category">Category:</label>
      <input type="text" id="income-category" required>
  
      <label for="income-amount">Amount (Ksh):</label>
      <input type="number" id="income-amount" required>
  
      <label for="income-source">Source:</label>
      <input type="text" id="income-source" required>
  
      <label for="income-date">Date Received:</label>
      <input type="date" id="income-date" required>
  
      <label for="income-frequency">Frequency:</label>
      <select id="income-frequency" required>
        <option value="One-time">One-time</option>
        <option value="Daily">Daily</option>
        <option value="Weekly">Weekly</option>
        <option value="Monthly">Monthly</option>
        <option value="Yearly">Yearly</option>
      </select>
  
      <button type="submit">Add Income</button>
    </form>
  
    <!-- Container to Display Income Records -->
    <div id="income-container"></div>
  
    >

  <!-- Add Budget Form -->
  <form id="addBudgetForm">
    <h2>Set Budget</h2>
    <select id="expenditureType" required>
      <option value="Expense">Expense</option>
      <option value="Bill">Bill</option>
      <option value="Debt">Debt</option>
      <option value="Savings">Savings</option>
    </select>
    <input type="text" id="budgetCategory" placeholder="Category" required>
    <input type="number" id="limitAmount" placeholder="Limit Amount" required>
    <select id="timeline" required>
      <option value="one-time">One-time</option>
      <option value="daily">Daily</option>
      <option value="weekly">Weekly</option>
      <option value="monthly">Monthly</option>
      <option value="annually">Annually</option>
    </select>
    <button type="submit">Set Budget</button>
  </form>

  <!-- Budget Progress -->
  <div id="budgetProgress" class="budget-progress">
    <h3>Budget Progress</h3>
    <div id="progressBars"></div>
  </div>

  <!-- Add Transaction Form -->
  <form id="addTransactionForm">
    <h2>Add Transaction</h2>
    <select id="transactionexpenditure" required>
      <option value="Expense">Expense</option>
      <option value="Savings">Savings</option>
      <option value="Debt">Debt</option>
      <option value="Bill">Bill</option>
    </select>
    <select id="transactionCategory" required>
      <option value="">Select Category</option>
    </select>
    <input type="number" id="amount" placeholder="Amount" required>
    <input type="text" id="description" placeholder="Description">
    <input type="date" id="transactionDate" required>
    <select id="frequency">
      <option value="one-time">One-time</option>
      <option value="daily">Daily</option>
      <option value="weekly">Weekly</option>
      <option value="monthly">Monthly</option>
      <option value="annually">Annually</option>
    </select>
    <button type="submit">Add Transaction</button>
  </form>

  <!-- Display Transactions -->
  <h2>Transactions</h2>
  <table border="1">
    <thead>
      <tr>
        <th>Date</th>
        <th>Type</th>
        <th>Category</th>
        <th>Amount</th>
        <th>Description</th>
        <th>Frequency</th>
      </tr>
    </thead>
    <tbody id="transactionsTableBody"></tbody>
  </table>

  <h2>Financial Overview</h2>
  <canvas id="financeChart" width="400" height="400"></canvas>

  
  <script src="/script.js"></script>
</body>
</html>